
<% include ./partials/header %>

<div class="container text-center">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Register</h2>
        <form action="/register" method="POST">
            <div class="panel panel-default">
                <div class="panel-heading">User Signup</div>
                <div class="panel-body">
                    <div class="form-group">
                        <input type="text" placeholder=" username" name="username" required/>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder=" password" name="password" required/> 
                    </div>
                    <input type="submit" class="btn btn-xs btn-primary" value="Register"/>
                    <input type="reset" class="btn btn-xs btn-warning" value="Reset"/>
                </div>
                <div class="panel-footer">
                    <a href="/login" class="btn btn-info btn-xs">Login</a>
                </div>
            </div>
        </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

<% include ./partials/footer %>